# HGM Admin Panel Environment Configuration
# Copy this file to .env.local for local development

# API Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_API_KEY=demo-hgm-api-key-2024-raipur

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# Application Configuration
REACT_APP_APP_NAME=हर घर मुंगा योजना
REACT_APP_VERSION=1.0.0
REACT_APP_ORGANIZATION=Government of Chhattisgarh

# Debug Mode (development only)
REACT_APP_DEBUG_MODE=true
REACT_APP_MOCK_API=true

# Analytics Configuration
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_GA_TRACKING_ID=

# Security Configuration
REACT_APP_SESSION_TIMEOUT=86400000
REACT_APP_AUTO_LOGOUT_WARNING=300000
